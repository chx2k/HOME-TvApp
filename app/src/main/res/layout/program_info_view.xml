<?xml version="1.0" encoding="utf-8"?>
<com.sony.sel.tvapp.view.ProgramInfoView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/cell_background"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/programIcon"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="@android:color/white"
                />

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/star"
                android:layout_gravity="top|right"
                android:layout_margin="5dp"
                />

            <ImageView
                android:id="@+id/recordProgram"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/record"
                android:layout_gravity="bottom|right"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/recordSeries"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/series_record"
                android:layout_gravity="bottom|right"
                android:layout_margin="10dp"
                />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/popupAlignView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/programTitle"
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program Title that might become very long"
                android:lines="1"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/programChannel"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel"
                />

            <TextView
                android:id="@+id/programTime"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:00-8:00"
                />

            <TextView
                android:id="@+id/programDescription"
                style="@style/dimmedSmallText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Long description\nof the program goes here, there can\nbe a lot of text and it shold wrap\nacross multiple lines."
                android:maxLines="3"
                android:ellipsize="end"
                />

        </LinearLayout>

    </LinearLayout>

</com.sony.sel.tvapp.view.ProgramInfoView>