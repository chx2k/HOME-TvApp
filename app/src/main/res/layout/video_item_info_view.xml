<?xml version="1.0" encoding="utf-8"?>
<com.sony.sel.tvapp.view.VideoItemInfoView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cell_background"
    android:elevation="2dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:scaleType="fitCenter"
                />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/popupAlignView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/title"
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="Title that might become very long"
                />

            <TextView
                android:id="@+id/line1"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="Program Title that also might become very long"
                android:textSize="16dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/line2"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/line3"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:00-8:00"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/description"
                style="@style/dimmedSmallText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:text="Long description\nof the program goes here, there can\nbe a lot of text and it shold wrap\nacross multiple lines."
                />

        </LinearLayout>

    </LinearLayout>

</com.sony.sel.tvapp.view.VideoItemInfoView>