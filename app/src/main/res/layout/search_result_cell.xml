<?xml version="1.0" encoding="utf-8"?>
<com.sony.sel.tvapp.view.SearchResultCell
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/cell_background"
    android:focusable="true"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="133dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/recordProgram"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:layout_margin="10dp"
                android:src="@drawable/record"
                />

            <ImageView
                android:id="@+id/recordSeries"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:layout_margin="10dp"
                android:src="@drawable/series_record"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="10"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/title"
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="Title"
                />

            <TextView
                android:id="@+id/programTitle"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="Title"
                />

            <TextView
                android:id="@+id/time"
                style="@style/smallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="Title"
                />

            <TextView
                android:id="@+id/description"
                style="@style/dimmedSmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="This is the long description of the search item, it can be very long"
                />

        </LinearLayout>
    </LinearLayout>
</com.sony.sel.tvapp.view.SearchResultCell>